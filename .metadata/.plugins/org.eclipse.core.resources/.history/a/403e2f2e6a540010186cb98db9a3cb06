<%
    int userId = 0;
    int appointmentId = 0;
    try {
        userId = Integer.parseInt(request.getParameter("userId"));
        appointmentId = Integer.parseInt(request.getParameter("appointmentId"));
    } catch (Exception e) {
        out.println("<h4 style='color:red'>Invalid or missing parameters</h4>");
        return;
    }
%>

<html>
<head>
    <title>Upload Medical Report</title>
    <%@include file="components/allCss.jsp"%>
    <link rel="stylesheet" href="../bootstrap.min.css">
</head>
<body>
<%@ include file="components/navBar.jsp"%>
<div class="container mt-5">
    <h3>Upload Medical Report</h3>
    <form action="${pageContext.request.contextPath}/UploadMedicalRecord" method="post" enctype="multipart/form-data">
        <input type="hidden" name="userId" value="<%= userId %>">
        <input type="hidden" name="appointmentId" value="<%= appointmentId %>">

        <div class="form-group">
            <label>Select PDF File:</label>
            <input type="file" name="reportFile" class="form-control" accept="application/pdf" required>
        </div>

        <button class="btn btn-success mt-3" type="submit">Upload</button>
    </form>
</div>

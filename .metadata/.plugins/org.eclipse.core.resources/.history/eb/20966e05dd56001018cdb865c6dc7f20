<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ page import="com.entity.Doctor" %>

<%
    Doctor doctor = (Doctor) session.getAttribute("doctorObj");
    if (doctor == null) {
        response.sendRedirect("../doctor_login.jsp");
        return;
    }

    // Get userId and appointmentId from URL parameters
    String userIdStr = request.getParameter("userId");
    String appointmentIdStr = request.getParameter("appointmentId");

    if (userIdStr == null || appointmentIdStr == null) {
        out.println("<h4 style='color:red'>Missing userId or appointmentId in URL</h4>");
        return;
    }
%>

<html>
<head>
    <title>Upload Medical Report</title>
    <%@include file="../components/allCss.jsp" %>
</head>
<body class="p-5">
    <%@ include file="navbar.jsp" %>
    <div class="container">
        <h3>Upload Medical Report (PDF)</h3>

        <form action="${pageContext.request.contextPath}/UploadMedicalRecord"
              method="post" enctype="multipart/form-data">

            <!-- These values come from URL -->
            <input type="hidden" name="userId" value="<%= userIdStr %>">
            <input type="hidden" name="appointmentId" value="<%= appointmentIdStr %>">

            <div class="form-group">
                <label>Select PDF File:</label>
                <input type="file" name="reportFile"
                       accept="application/pdf"
                       class="form-control" required>
            </div>

            <button type="submit" class="btn btn-success mt-3">Upload</button>
        </form>
    </div>
</body>
</html>
